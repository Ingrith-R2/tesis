<!-- New Category Form -->
<section class="page-section mt-5" id="new-category">
    <div class="container">
        <!-- Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Nueva Categoría</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Error Message -->
        {{#if error}}
        <div id="errorMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        <!-- New Category Form-->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <form action="/categorie/add" method="POST">
                    <!-- Name input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" type="text" placeholder="Enter category name..." required
                            name="name" />
                        <label for="name">Nombre de la Categoría</label>
                    </div>
                    <!-- Image URL input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="imageUrl" type="text" placeholder="Enter image URL..." required
                            name="imageUrl" />
                        <label for="imageUrl">URL de la Imagen</label>
                    </div>
                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl d-block w-100" type="submit">Guardar Categoría</button>
                </form>
                <div class="text-end mt-3">
                    <a href="/categories" class="text-decoration-none">
                        <button class="btn btn-secondary btn-xl d-block w-100" type="submit">Cancelar</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Obtén el elemento del mensaje de error
        var errorMessage = document.getElementById('errorMessage');

        // Si existe el mensaje de error
        if (errorMessage) {
            setTimeout(function () {
                errorMessage.style.display = 'none';
                history.replaceState(null, null, window.location.pathname);
            }, 3000);
        }
    });
</script>