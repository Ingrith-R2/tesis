<!-- Categorie Section-->
<section class="page-section mt-5" id="login">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Todas las Categorias</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Section Portfolios -->
        <div class="row justify-content-center">
            <!-- CategorÃ­as -->
            <section class="categories mb-5">
                <div class="container">
                    <div class="text-end mb-3">
                        <a href="/categorie/add" class="text-decoration-none">
                            <button class="btn btn-success btn-xl" type="submit">Agregar nueva Categoria</button>
                        </a>
                    </div>
                    <div class="row">
                        {{#each categories}}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <img src="{{imageUrl}}" class="card-img-top" style="max-width: 100%; max-height: 200px; object-fit: cover;" alt="{{name}}"/>
                                <div class="card-body">
                                    <h5 class="card-title text-decoration-underline">{{name}}</h5>
                                </div>
                                <div class="card-footer">
                                    <a href="/categorie/editCategorie/{{_id}}" class="btn btn-warning btn-sm">Editar</a>
                                    <form action="/categorie/deleteCategorie/{{_id}}?_method=DELETE" method="POST"
                                        class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>